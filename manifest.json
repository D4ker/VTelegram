{
	"manifest_version":2,
	"name":"VTelegram",
	"description":"Exporting your dialogs from VK to Telegram",
	"version":"1.0",
	"author":"D4ker",
	"background": {
    	"scripts": ["app/background.js"],
    	"persistent": false
  	},
	"content_scripts": [
		{
			"matches": ["https://vk.com/*", "http://vk.com/*"],
			"run_at": "document_end",
			"js": ["app/content.js"]
		}
	],
	"permissions": [
      	"tabs",
        "identity",
        "storage",
        "https://www.googleapis.com/*"
    ],
    "oauth2": {
        "client_id": "516717924129-nn1i5d4nagfp20c0dcfu38jue2n0rd07.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/drive.file"
        ]
    },
	"icons": {
		"128":"res/icons/icon128.png"
	}
}
