{
	"manifest_version":2,
	"name":"VTelegram",
	"description":"Exporting your dialogs from VK to Telegram",
	"version":"1.0",
	"author":"D4ker",
	"background": {
    	"scripts": ["app/background.js"]
  	},
	"content_scripts": [
		{
			"matches": ["https://vk.com/*", "http://vk.com/*"],
			"run_at": "document_end",
			"js": ["app/content.js"]
		}
	],
	"permissions": [
      	"tabs"
    ],
	"icons": {
		"128":"res/icons/icon128.png"
	}
}
